<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TO-DO LIST"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title_text">

        <TextView
            android:id="@+id/filter_all"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="#4285F4"
            android:text="ALL"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/filter_work"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="#E0E0E0"
            android:text="WORK"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/filter_study"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="#E0E0E0"
            android:text="STUDY"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/filter_etc"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="#E0E0E0"
            android:text="ETC"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/filter_uncompeleted"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:buttonTint="@android:color/black"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료되지않음"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>

    ---

    <ScrollView
        android:id="@+id/todo_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_input_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@android:color/white">

                <CheckBox
                    android:id="@+id/todo_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/todo_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="화장실 가기"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@id/todo_checkbox"
                    app:layout_constraintEnd_toStartOf="@id/todo_category"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/todo_category"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="#F0F0F0"
                    android:text="WORK"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@id/edit_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/edit_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@null"
                    android:contentDescription="Edit To-Do"
                    app:tint="@android:color/darker_gray"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toStartOf="@id/delete_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_delete"
                    android:background="@null"
                    app:tint="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    ---

    <LinearLayout
        android:id="@+id/bottom_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/date_input_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F0F0F0"
            android:padding="4dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/date_input_field"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="시간 입력 (HH:MM)"
                android:background="@android:color/transparent"
                android:inputType="time"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/date_picker_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_today"
                android:background="@android:color/black"
                android:contentDescription="Select Time"
                app:tint="@android:color/white"
                android:scaleType="centerInside"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F0F0F0"
            android:padding="4dp">

            <Spinner
                android:id="@+id/input_category_spinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                android:background="@android:color/white"
                android:popupBackground="#E0E0E0"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:entries="@array/category_options"
                android:gravity="center" />

            <EditText
                android:id="@+id/todo_input_field"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="투두 입력"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/add_todo_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@android:color/black"
                android:contentDescription="Add To-Do"
                app:tint="@android:color/white"
                android:scaleType="centerInside"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>